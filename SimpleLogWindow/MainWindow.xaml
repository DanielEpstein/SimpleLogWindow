<Window x:Class="SimpleLogWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleLogWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="LogConsoleButton" Content="LogConsole" HorizontalAlignment="Left" Margin="286,57,0,0" VerticalAlignment="Top" Width="75" Click="buttonLogConsole_Click"/>
        <Button x:Name="AddLogItemButton" Content="AddLogItem" HorizontalAlignment="Left" Margin="59,77,0,0" VerticalAlignment="Top" Width="75" Click="AddLogItem_Click"/>
        <CheckBox x:Name="OpenLogConsoleOnLaunchCheckBox" Content="Open LogConsole on launch" HorizontalAlignment="Left" Margin="247,157,0,0" VerticalAlignment="Top" Checked="OpenLogConsoleOnLaunchCheckBox_Checked" Unchecked="OpenLogConsoleOnLaunchCheckBox_Unchecked"/>
        <Button x:Name="SaveSettingsButton" Content="Save" HorizontalAlignment="Left" Margin="384,195,0,0" VerticalAlignment="Top" Width="75" Click="SaveSettingsButton_Click"/>
    </Grid>
</Window>
