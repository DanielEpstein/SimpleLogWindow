<Window x:Class="SimpleLogWindow.LogConsole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleLogWindow"
        mc:Ignorable="d"
        Title="LogConsole" Height="300" Width="600">
    <Grid>
        <ScrollViewer x:Name="Scroller" Margin="0" ScrollChanged="scrollviewer_Messages_ScrollChanged" >
            <TextBox x:Name="OutputBox" Padding="10" FontFamily="Consolas" Background="Black" IsReadOnly="True" Foreground="Lime"/>
        </ScrollViewer>
    </Grid>
</Window>
